<html lang="es">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <h1>Nuevo Usuario</h1>
        <form action="/v1/categorias" method="POST">
            <div>
                <label for="nombre">Nombre categoría:</label>
